<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="card col-10">
            <div class="card-body">
                <h4>Edição de postagem</h4>
                
                <form action="/admin/postagem/editada" method="post">
                    <input type="hidden" name="id" value="{{postagem._id}}">

                    <label for="titulo">Titulo:</label>
                    <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control">

                    <label for="titulo">Slug:</label>
                    <input type="text" name="slug" value="{{postagem.slug}}" class="form-control">

                    <label for="titulo">Descrição:</label>
                    <input type="text" name="descricao" value="{{postagem.descricao}}" class="form-control">

                    <label for="titulo">Conteúdo:</label>
                    <textarea type="text" name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
                    
                    <label for="categoria">Categoria:</label>
                    <select name="categoria" id="" class="custom-select">

                        {{#each categorias}}
                            <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                            <option value="0">Nenhuma categoria registrada</option>
                        {{/each}}

                    </select>
                        
                    <button type="submit" class="btn btn-success col-12 mt-4" >Criar postagem</button>
                </form>
            </div>
        </div>
    </div>
</div>    

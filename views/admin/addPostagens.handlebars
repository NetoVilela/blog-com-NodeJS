{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="card col-10">
            <div class="card-body">
                <h4>Nova postagem</h4>
                <form action="/admin/postagens/nova" method="post">
                    <label for="titulo">Titulo:</label>
                    <input type="text" name="titulo" class="form-control">

                    <label for="titulo">Slug:</label>
                    <input type="text" name="slug" class="form-control">

                    <label for="titulo">Descrição:</label>
                    <input type="text" name="descricao" class="form-control">

                    <label for="titulo">Conteúdo:</label>
                    <textarea type="text" name="conteudo" class="form-control"></textarea>
                    
                    <label for="categoria">Categoria:</label>
                    <select name="categoria" id="" class="custom-select">

                        {{#each categorias}}
                            <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                            <option value="0">Nenhuma categoria registrada</option>
                        {{/each}}

                    </select>
                        
                    <button type="submit" class="btn btn-success col-12 mt-4" >Criar postagem</button>
                </form>
            </div>
        </div>
    </div>
</div>    
